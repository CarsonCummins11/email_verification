{
    "manifest_version": 3,
    "name": "Email OTP",
    "version": "1.0",
    "description": "This extension auto enters otp from your email",
    "minimum_chrome_version": "101",
    "permissions": [
        "tabs",
        "scripting",
        "offscreen",
        "declarativeNetRequestWithHostAccess",
        "browsingData"
    ],
    "host_permissions": [
      "https://mail.google.com/*"
    ],
    "background": {
      "service_worker": "scripts/gmail_service_worker.js"
    },
    "content_scripts": [
      {
        "js": ["scripts/any_page_content.js"],
        "matches": [
          "*://*/*"
        ],
        "exclude_matches": [
          "*://mail.google.com/*"
        ]
      }
    ],
    "declarative_net_request" : {
        "rule_resources" : [{
            "id": "allow_gmail_iframe",
            "enabled": true,
            "path": "allow_gmail_iframe.json"
        }]
    }
  }